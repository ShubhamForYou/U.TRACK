<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>U.Track - Dashboard</title>
    <link
      href="https://fonts.googleapis.com/css2?family=Lato:wght@400;700&display=swap"
      rel="stylesheet"
    />
    <style>
      body {
        font-family: "Lato", sans-serif;
        background: #f7e7dc;
        display: flex;
        justify-content: center;
        align-items: flex-start;
        height: 100vh;
        margin: 0;
        padding: 20px;
      }
      .dashboard-container {
        width: 100%;
        max-width: 1200px;
        background-color: #fff8f3;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
        overflow: hidden;
        padding: 20px;
      }
      .header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
      }
      .header .user-info {
        font-size: 18px;
        color: #405d72;
      }
      .header .user-info strong {
        font-size: 20px;
      }
      .form-section {
        margin-bottom: 40px;
      }
      .form-section h2 {
        font-size: 22px;
        color: #405d72;
        margin-bottom: 20px;
      }
      .form-section form {
        display: flex;
        gap: 20px;
        flex-wrap: wrap;
      }
      .form-section input {
        padding: 10px;
        font-size: 16px;
        border: 1px solid #ccc;
        border-radius: 4px;
        flex: 1;
      }
      .form-section button {
        padding: 10px;
        font-size: 16px;
        color: #fff;
        background-color: #405d72;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        flex-basis: 100px;
      }
      .form-section button:hover {
        background-color: #758694;
      }
      .table-section {
        margin-top: 20px;
      }
      .table-section table {
        width: 100%;
        border-collapse: collapse;
      }
      .table-section th,
      .table-section td {
        border: 1px solid #ccc;
        padding: 10px;
        text-align: left;
      }
      .table-section th {
        background-color: #405d72;
        color: #fff;
      }
      .table-section tbody tr:nth-child(even) {
        background-color: #f2f2f2;
      }
    </style>
  </head>
  <body>
    <div class="dashboard-container">
      <div class="header">
        <div class="user-info">
          <strong>Username:</strong> John Doe<br />
          <strong>Short URLs:</strong> 10
        </div>
      </div>
      <div class="form-section">
        <h2>Create New Short URL</h2>
        <form action="/api/url/create" method="post">
          <input
            type="text"
            name="name"
            placeholder="Short URL Name"
            required
          />
          <input
            type="url"
            name="redirectUrl"
            placeholder="Redirect URL"
            required
          />
          <button type="submit">Create</button>
        </form>
      </div>
      <div class="table-section">
        <h2>Your Short URLs</h2>
        <table>
          <thead>
            <tr>
              <th>Name</th>
              <th>Redirect URL</th>
              <th>Short URL</th>
              <th>View Count</th>
            </tr>
          </thead>
          <tbody>
            <% if (!locals.userAllUrl || locals.userAllUrl.length === 0) { %>
            <tr>
              <td colspan="4">No URLs found. Start creating new short URLs!</td>
            </tr>
            <% } else { %> <% userAllUrl.forEach(function(url) { %>
            <tr>
              <td><%= url.name %></td>
              <td><%= url.redirectUrl %></td>
              <td><%= url.shortUrl %></td>
              <td><%= url.visitorHistory.length %></td>
            </tr>
            <% }) %> <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </body>
</html>
